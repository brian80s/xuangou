<h1>Listing flags</h1>

<table>
  <tr>
    <th>User</th>
    <th>User name</th>
    <th>Resource</th>
    <th>Resource type</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @flags.each do |flag| %>
  <tr>
    <td><%= flag.user_id %></td>
    <td><%= flag.user_name %></td>
    <td><%= flag.resource_id %></td>
    <td><%= flag.resource_type %></td>
    <td><%= flag.content %></td>
    <td><%= link_to 'Show', flag %></td>
    <td><%= link_to 'Edit', edit_flag_path(flag) %></td>
    <td><%= link_to 'Destroy', flag, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

